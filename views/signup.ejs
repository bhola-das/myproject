<body>
    <div class="w-full h-screen flex flex-col md:flex-row justify-center items-center gap-3 mt-3 md:mb-1 bg-cover" style="background-image: url('https://t3.ftcdn.net/jpg/03/99/24/82/360_F_399248286_Ogm0T8CFeauN4Hdn42FqWfsCE02dJBbX.jpg')" >
            <div class="flex items-center justify-center h-full rounded-lg m-5">
                <div class="container  md:w-96 md:pl-10 md:pr-10 p-10 bg-gray-200 rounded-lg shadow-neu">
                    <h1 class=" text-xl md:text-3xl font-bold mb-5 text-center">Sign Up</h1>
                   <form action="/register" method="post" id="registerForm">
                    <input type="text" placeholder="Username" name="username" class="w-full mb-3 p-2 rounded-full bg-gray-200 outline-none shadow-innerNeu"/>
                    <input type="text" placeholder="Name" name="name" class="w-full mb-3 p-2 rounded-full bg-gray-200 outline-none shadow-innerNeu"/>
                    <input type="text" placeholder="age" name="age" class="w-full mb-3 p-2 rounded-full bg-gray-200 outline-none shadow-innerNeu"/>
                    <input type="email" placeholder="Email" name="email" class="w-full mb-3 p-2 rounded-full bg-gray-200 outline-none shadow-innerNeu"/>
                    <input type="password" placeholder="Password" name="password" class="w-full mb-8 p-2 rounded-full bg-gray-200 outline-none shadow-innerNeu"/>
                    <button class="w-[100%] h-10 rounded-full bg-blue-500 text-white font-bold mb-5 hover:text-red-500 shadow-neu">Sign Up</button>
                </form>
                    <a class="px-4 py-2 flex items-center justify-center font-bold hover:text-red-500 rounded-full bg-blue-500 text-white shadow-neu" href="/login">Sign In</a>
                </div>
            
        </div>

    </div>


